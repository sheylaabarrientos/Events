<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="buttonsStyle">
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">@dimen/tinyText_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="textStyleTitlePrimary">
        <item name="android:fontFamily">@font/gilroy_extrabold</item>
        <item name="android:textColor">@color/violet</item>
        <item name="android:textSize">@dimen/smallText_18</item>
    </style>

    <style name="textStyleTitle">
        <item name="android:fontFamily">@font/gilroy_extrabold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/smallText_18</item>
    </style>

    <style name="textStyleSubtitle">
        <item name="android:textColor">@color/dark_violet</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">@dimen/smallText_18</item>
    </style>

    <style name="textStyleDescription">
        <item name="android:textColor">@color/dark_violet</item>
        <item name="android:textSize">@dimen/tiny_tinyText_14</item>
    </style>

    <style name="LaunchTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">45dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">45dp</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="shapeableImageStyle" parent="">
        <item name="cornerSizeBottomLeft">40dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>
</resources>