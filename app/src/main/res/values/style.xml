<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="buttonsStyle">
        <item name="android:background">@drawable/theme_background_gradient</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">@dimen/smallText_18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="textStyleTitle">
        <item name="android:fontFamily">@font/gilroy_extrabold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/bigText_32</item>
    </style>

    <style name="textStyleSubtitle">
        <item name="android:fontFamily">@font/gilroy_regular</item>
        <item name="android:textColor">@color/dark_violet</item>
        <item name="android:textSize">@dimen/tinyText_16</item>
